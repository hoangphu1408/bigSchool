@model BigSchool.ViewModels.CourseViewModel
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Create</h2>
@using (Html.BeginForm("Create", "Courses"))
{
    @Html.AntiForgeryToken()
<form>
    <div class="form-group">
        @Html.LabelFor(n => n.Place)
        @Html.TextBoxFor(n => n.Place, new { @class = "form-control" })
        @Html.ValidationMessageFor(n => n.Place)
    </div>
    <div class="form-group">
        @Html.LabelFor(n => n.Date)
        @Html.TextBoxFor(n => n.Date, new { @class = "form-control" })
        @Html.ValidationMessageFor(n => n.Date)
    </div>
    <div class="form-group">
        @Html.LabelFor(n => n.Time)
        @Html.TextBoxFor(n => n.Time, new { @class = "form-control" })
        @Html.ValidationMessageFor(n => n.Time)
    </div>
    <div class="form-group">
          @Html.LabelFor(n => n.Category)
          @Html.DropDownListFor(n => n.Category,
           new SelectList(Model.Categories, "Id", "Name"), "", new { @class = "form-control" })
        @Html.ValidationMessageFor(n => n.Category)
    </div>
    <button type="submit" value="save" class="btn btn-primary">Save</button>
</form>
}
@section scripts
{
    @Scripts.Render("~/bundles/jqueryval");   
}